@{
}

@model Book


<form method="post" asp-action="AddBook">

    <div class="form-group">
        <label>Title</label>
        <input type="text" asp-for="Title" class="form-control" />

    </div>

    <div class="form-group">
        <label>Author</label>
        <input type="text" asp-for="Author" class="form-control">

    </div>


    <div class="form-group">
        <label>ISBN</label>
        <input type="text" asp-for="ISBN" class="form-control">

    </div>


    <div class="form-group">
        <label>PublishedDate</label>
        <input type="text" asp-for="PublishedDate" class="form-control">

    </div>

    <div class="form-group">
        <label>AvailableCopies</label>
        <input type="text" asp-for="AvailableCopies" class="form-control">

    </div>

    <button type="submit" class="btn btn-primary">Submit</button>
</form>